package com.codehows.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import com.codehows.domain.SampleDTO;				//public String ex01(SampleDTO dto)에 대한 import

import lombok.extern.log4j.Log4j;


@Controller
@RequestMapping("/sample/*")
@Log4j
public class SampleController {
	
	@RequestMapping("")			//sample 뒤에 아무것도 없다면 basic 메소드를 실행한다.
	public void basic() {
		
		log.info("basic.........................");
	}
	
	@RequestMapping(value="/basic", method = {RequestMethod.GET, RequestMethod.POST})
	public void basicGet() {
		log.info("basic get......................");
	}
	
	@GetMapping("/basicOnlyGet")
	public void basicGet2() {
		log.info("basic get only get..............");
	}
	
	@GetMapping("/ex01")
	public String ex01(SampleDTO dto) {
		
		log.info("" + dto);
		
		return "ex01";				//ex01.jsp 파일로 리턴이 된다.
	}
	
	@GetMapping("/ex02") 			//ex02 호출
	public String ex02(@RequestParam("name") String name, @RequestParam("age") int age) {
		
		log.info("name" + name);
		log.info("age" + age);
		
	}
}
